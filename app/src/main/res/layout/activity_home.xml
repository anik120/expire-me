<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    android:backgroundTint="#A9A9A9"
    android:orientation="vertical"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/viewAllItemsButton"
        android:layout_width="370dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/all_items_icon"
        android:onClick="onAllItemsClicked"
        />

    <TextView
        android:id="@+id/viewSoonToExpireItemsButton"
        android:layout_width="370dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/soon_to_expire_icon"
        android:onClick="onSoonToExpireClicked"
        />

    <TextView
        android:id="@+id/viewExpiredItemsButton"
        android:layout_width="370dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/expired_icon"
        android:onClick="onExpiredItemsClicked"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="294dp"
            android:layout_height="70dp"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20sp"
            android:text="Location Info will be here"
            android:background="#FFFFFF"
            />


        <Button
            android:id="@+id/addItemButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:onClick="onAddItemClicked"
            android:padding="15dp"
            android:background="@drawable/button_add"
            android:layout_gravity="right"
            />


    </LinearLayout>
</LinearLayout>

